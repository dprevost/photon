// --+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--

#ifndef VDS_HASH_MAP_H_CPP
#define VDS_HASH_MAP_H_CPP

// --+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--

#include <vdsf/vdsCommon.h>

// --+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--

// Forward declarations
//class vdsQueueItem;
class vdsSession;

// --+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--

class vdsHashMap
{
public:

   vdsHashMap( vdsSession &session );

   virtual ~vdsHashMap();

   void Close();
   
   void Delete( const void * key,
                size_t       keyLength );

   void Get( const void * key,
             size_t       keyLength,
             void       * buffer,
             size_t       bufferLength,
             size_t     * returnedLength );

   int GetFirst( void       * key,
                 size_t       keyLength,
                 void       * buffer,
                 size_t       bufferLength,
                 size_t     * retKeyLength,
                 size_t     * retDataLength );

   int GetNext( void       * key,
                size_t       keyLength,
                void       * buffer,
                size_t       bufferLength,
                size_t     * retKeyLength,
                size_t     * retDataLength );

   void Insert( const void * key,
                size_t       keyLength,
                const void * data,
                size_t       dataLength );

   void Open( const char * hashMapName,
              size_t       nameLengthInBytes );
   
   void Replace( const void * key,
                 size_t       keyLength,
                 const void * data,
                 size_t       dataLength );

   void Status( vdsObjStatus * pStatus );

private:

   VDS_HANDLE m_objectHandle;
   VDS_HANDLE m_sessionHandle;
   
};

// --+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--

#endif /* VDS_HASH_MAP_H_CPP */

// --+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--+--

