# /MT multithreaded .exe
# /W4 : warning level 4
# /O2 : optimize
# _MBCS Multi-bytes chars (not the 16 bits of win32 unicode). Not used yet.
# /GX ???
# /nologo - suppress MS banner since it is a bit hard to see errors with it
#           turned on

VBS_VERBOSE=

CLEANFILES = *~  vc60.pdb

W32_SYS_LIBS = kernel32.lib advapi32.lib ws2_32.lib
LDD_FLAGS = $(W32_SYS_LIBS)     photoncpp.lib photon.lib photonNucleus.lib photonCommon.lib /nologo /IGNORE:4089 /subsystem:console /machine:I386 /libpath:"../../../Release" 
LDD_FLAGS_DEBUG=$(W32_SYS_LIBS) photoncpp.lib photon.lib photonNucleus.lib photonCommon.lib /nologo /IGNORE:4089 /subsystem:console /machine:I386 /libpath:"../../../Debug" 

OUTDIR=.\Release
INTDIR=.\Release
OUTDIR_DEBUG=.\Debug
INTDIR_DEBUG=.\Debug

CFLAGS_DEBUG=   /nologo /MDd /W3 /Zi /I "../../.." /I "../../../include" /D "WIN32" /D "_DEBUG" /D "_CONSOLE" /D "_MBCS" /Fo"$(INTDIR_DEBUG)\\" /EHsc
CFLAGS_RELEASE= /nologo /MD  /W3 /O2 /I "../../.." /I "../../../include" /D "WIN32" /D "NDEBUG" /D "_CONSOLE" /D "_MBCS" /Fo"$(INTDIR)\\"       /EHsc

.cpp{$(OUTDIR)}.exe:
	$(CPP) $(CFLAGS_RELEASE) $< /link $(LDD_FLAGS) /out:"$@"

.cpp{$(OUTDIR_DEBUG)}.exe:
	$(CPP) $(CFLAGS_DEBUG) $< /link $(LDD_FLAGS_DEBUG) /out:"$@"

"$(OUTDIR)" :
	if not exist "$(OUTDIR)/" mkdir "$(OUTDIR)"

"$(OUTDIR_DEBUG)" :
	if not exist "$(OUTDIR_DEBUG)/" mkdir "$(OUTDIR_DEBUG)"
  

