###########################################################################
#
# Defines the main macros.
#
###########################################################################

LINK32=link.exe

OUTDIR_RELEASE = .\Release
INTDIR_RELEASE = .\Release
OUTDIR_DEBUG   = .\Debug
INTDIR_DEBUG   = .\Debug

CLEANFILES = *~ *.dep *.plg vc60.* *.ncb

W32_SYS_LIBS=kernel32.lib user32.lib gdi32.lib winspool.lib comdlg32.lib advapi32.lib shell32.lib ole32.lib oleaut32.lib uuid.lib odbc32.lib odbccp32.lib ws2_32.lib

LDD_FLAGS_RELEASE = $(W32_SYS_LIBS) photon.lib photonNucleus.lib photonCommon.lib /nologo /dll /incremental:no         /machine:I386 /out:"$(OUTDIR_RELEASE)\photoncpp.dll" /implib:"$(OUTDIR_RELEASE)\photoncpp.lib" /libpath:"..\Release"
LDD_FLAGS_DEBUG   = $(W32_SYS_LIBS) photon.lib photonNucleus.lib photonCommon.lib /nologo /dll /incremental:yes /debug /machine:I386 /out:"$(OUTDIR_DEBUG)\photoncpp.dll"   /implib:"$(OUTDIR_DEBUG)\photoncpp.lib"   /libpath:"..\Debug"

CFLAGS_RELEASE=/nologo /MD  /W3 /O2     /I "..\Common" /I "..\include" /I ".." /D "WIN32" /D "NDEBUG" /D "_WINDOWS" /D "_MBCS" /D "_USRDLL" /D "BUILD_PHOTON" /Fo"$(INTDIR_RELEASE)\\"     /c /GX
CFLAGS_DEBUG  =/nologo /MDd /W3 /ZI /Od /I "..\Common" /I "..\include" /I ".." /D "WIN32" /D "_DEBUG" /D "_WINDOWS" /D "_MBCS" /D "_USRDLL" /D "BUILD_PHOTON" /Fo"$(INTDIR_DEBUG)\\"   /GZ /c /GX

OBJS_RELEASE=                                 \
        "$(INTDIR_RELEASE)\Exception.obj"     \
        "$(INTDIR_RELEASE)\FastMap.obj"       \
        "$(INTDIR_RELEASE)\FastMapEditor.obj" \
        "$(INTDIR_RELEASE)\Folder.obj"        \
        "$(INTDIR_RELEASE)\HashMap.obj"       \
        "$(INTDIR_RELEASE)\Lifo.obj"          \
        "$(INTDIR_RELEASE)\Process.obj"       \
        "$(INTDIR_RELEASE)\Queue.obj"         \
        "$(INTDIR_RELEASE)\Session.obj"       

OBJS_DEBUG = $(OBJS_RELEASE:.\Release\=.\Debug\)

###########################################################################
#
# Defines the rules.
#
###########################################################################

.cpp{$(INTDIR_RELEASE)}.obj::
	$(CPP) $(CFLAGS_RELEASE) $< 

.cpp{$(INTDIR_DEBUG)}.obj::
	$(CPP) $(CFLAGS_DEBUG) $< 

all: $(OUTDIR_RELEASE) $(OUTDIR_RELEASE)\photoncpp.dll $(OUTDIR_DEBUG) $(OUTDIR_DEBUG)\photoncpp.dll

"$(OUTDIR_RELEASE)\photoncpp.dll" : "$(OUTDIR_RELEASE)" $(DEF_FILE) $(OBJS_RELEASE)
	-del ..\Release\photoncpp.dll
	-del ..\Release\photoncpp.lib
	$(LINK32) $(LDD_FLAGS_RELEASE) $(OBJS_RELEASE)
	copy Release\photoncpp.dll ..\Release
	copy Release\photoncpp.lib ..\Release

"$(OUTDIR_DEBUG)\photoncpp.dll" : "$(OUTDIR_DEBUG)" $(DEF_FILE) $(OBJS_DEBUG)
	-del ..\Debug\photoncpp.dll
	-del ..\Debug\photoncpp.lib
	$(LINK32) $(LDD_FLAGS_DEBUG) $(OBJS_DEBUG)
	copy debug\photoncpp.dll ..\Debug
	copy debug\photoncpp.lib ..\Debug

###########################################################################
#
# The targets
#
###########################################################################

check: all
	cd Tests && nmake -f Makefile.win32 check VBS_VERBOSE=$(VBS_VERBOSE) && cd ..

checkdebug: all
	cd Tests && nmake -f Makefile.win32 checkdebug VBS_VERBOSE=$(VBS_VERBOSE) && cd ..

"$(OUTDIR_RELEASE)" :
	if not exist "$(OUTDIR_RELEASE)/$(NULL)" mkdir "$(OUTDIR_RELEASE)"

"$(OUTDIR_DEBUG)" :
	if not exist "$(OUTDIR_DEBUG)/$(NULL)" mkdir "$(OUTDIR_DEBUG)"
   
clean: 
	-@erase /Q Debug
	-@rmdir /Q Debug
	-@erase /Q Release
	-@rmdir /Q Release
	-@erase /Q $(CLEANFILES)
	cd Tests && nmake -f Makefile.win32 clean && cd ..

