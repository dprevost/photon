# /MT multithreaded .exe
# /W4 : warning level 4
# /O2 : optimize
# _MBCS Multi-bytes chars (not the 16 bits of win32 unicode). Not used yet.
# /GX ???
# /nologo - suppress MS banner since it is a bit hard to see errors with it
#           turned on

VBS_VERBOSE=

CLEANFILES = *~ 

W32_SYS_LIBS=kernel32.lib advapi32.lib
LDD_FLAGS       = $(W32_SYS_LIBS) photonCommon.lib /nologo /incremental:no /subsystem:console /machine:I386 /libpath:"../../../Release2005" 
LDD_FLAGS_DEBUG = $(W32_SYS_LIBS) photonCommon.lib /nologo /incremental:no /subsystem:console /machine:I386 /libpath:"../../../Debug2005" 

DIR_RELEASE = .\Release2005
DIR_DEBUG   = .\Debug2005
DLL_RELEASE = ..\..\..\Release2005
DLL_DEBUG   = ..\..\..\Debug2005

CFLAGS_DEBUG=   /nologo /MDd /W4     /I "../.." /I "../../.." /I "../../../.." /I "../../../Tests" /D "WIN32" /D "_DEBUG" /D "_CONSOLE" /D "_MBCS" /Fo"$(DIR_DEBUG)\\" 
CFLAGS_RELEASE= /nologo /MD  /W4 /O2 /I "../.." /I "../../.." /I "../../../.." /I "../../../Tests" /D "WIN32" /D "NDEBUG" /D "_CONSOLE" /D "_MBCS" /Fo"$(DIR_RELEASE)\\" 

.c{$(DIR_RELEASE)}.exe:
	$(CPP) $(CFLAGS_RELEASE) $< /link $(LDD_FLAGS) /out:"$@"

.c{$(DIR_DEBUG)}.exe:
	$(CPP) $(CFLAGS_DEBUG) $< /link $(LDD_FLAGS_DEBUG) /out:"$@"

"$(DIR_RELEASE)" :
	if not exist "$(DIR_RELEASE)/$(NULL)" mkdir "$(DIR_RELEASE)"

"$(DIR_DEBUG)" :
	if not exist "$(DIR_DEBUG)/$(NULL)" mkdir "$(DIR_DEBUG)"
  

